{
  "name": "markdown",
  "displayName": "NoteIM: Fast Image & Markdown Sharing",
  "description": "Upload images & share Markdown documents with one click. Zero configuration, instant sharing.",
  "version": "3.0.3",
  "publisher": "starkwang",
  "icon": "images/logo.png",
  "author": {
    "name": "starkwang",
    "email": "shudongai@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/note-im/noteim-vscode"
  },
  "homepage": "https://github.com/note-im/noteim-vscode/blob/master/README.md",
  "bugs": {
    "url": "https://github.com/note-im/noteim-vscode/issues"
  },
  "engines": {
    "vscode": "^1.11.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.okmd",
        "title": "NoteIM: Paste Image"
      },
      {
        "command": "noteim.uploadImage",
        "title": "NoteIM: Upload Image"
      },
      {
        "command": "noteim.showFiles",
        "title": "NoteIM: Show Uploaded Files"
      },
      {
        "command": "noteim.showStats",
        "title": "NoteIM: Show Statistics"
      },
      {
        "command": "noteim.resetDevice",
        "title": "NoteIM: Reset Device"
      },
      {
        "command": "noteim.shareMarkdown",
        "title": "NoteIM: Share Markdown"
      },
      {
        "command": "noteim.showShares",
        "title": "NoteIM: Show My Shares"
      },
      {
        "command": "noteim.showApiKey",
        "title": "NoteIM: Show API Key"
      }
    ],
    "keybindings": [
      {
        "command": "extension.okmd",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v",
        "when": "editorTextFocus"
      },
      {
        "command": "noteim.shareMarkdown",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "NoteIM Configuration",
      "properties": {
        "noteim.apiUrl": {
          "type": "string",
          "default": "https://api.noteim.com",
          "description": "NoteIM API URL"
        },
        "noteim.localPath": {
          "type": "string",
          "default": "./images",
          "description": "Temporary local path for images"
        },
        "noteim.websiteUrl": {
          "type": "string",
          "default": "https://www.noteim.com",
          "description": "NoteIM website URL. Use your API Key to manage images and notes at this website.",
          "markdownDescription": "NoteIM website URL. Use your **API Key** (view via `NoteIM: Show API Key` command) to manage your images and notes at [https://www.noteim.com](https://www.noteim.com)"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "eslint": "^9.37.0",
    "mocha": "^11.7.4",
    "typescript": "^2.0.3",
    "uuid": "^10.0.0",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "form-data": "^4.0.0",
    "moment": "^2.18.1"
  }
}
